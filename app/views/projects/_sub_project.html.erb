<div class="flex flex-col">
  <p style="color: green"><%= notice %></p>

  <%= render @project %>

  <% @project.spaces.each do |project_space| %>
  <div class="rounded-lg border bg-white text-card-foreground shadow-sm mt-4">
    <div class="p-6 py-4 flex flex-row items-center justify-between">
      <div class="flex flex-col">
        <h3 class="text-lg font-semibold leading-none tracking-tight">
          <%= project_space.title %>
        </h3>

        <h4 class="text-sm leading-none tracking-tight mt-2">
          <%= "#{project_space.project_items.count} " + "Item".pluralize(project_space.project_items.count) %>
        </h4>
      </div>

      <a
        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 text-primary border hover:border-gray-300 h-10 px-4 py-2"
        href="<%= project_space_path(@project, project_space) %>"
      >
        Manage
      </a>
    </div>
  </div>
  <% end %>

  <div class="rounded-lg border bg-white text-card-foreground shadow-sm mt-4">
    <div class="p-6 flex flex-col items-end gap-4">
      <a
        class="inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
        href="<%= new_project_space_path(@project) %>"
      >
        Add a Space
      </a>
    </div>
  </div>

  <div>
    <%= link_to "Edit this project", edit_project_path(@project) %> |
    <%= link_to "Back to projects", projects_path %>

    <%= button_to "Destroy this project", @project, method: :delete %>
  </div>
</div>
